<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.25"
        android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.75"
        android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.3"
        android:orientation="horizontal"/>

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="100dp"
        android:textColor="@color/white"
        android:textAlignment="textEnd"
        android:paddingEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/gl_4"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_C"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="25dp"
        android:text="C"
        android:textSize="30sp"
        app:cornerRadius="36dp"
        app:layout_constraintTop_toBottomOf="@id/gl_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/gl_1"
        android:backgroundTint="@color/light_grey"
        android:textColor="@color/black"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_7"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="25dp"
        android:text="7"
        android:textSize="30sp"
        app:cornerRadius="36dp"
        app:layout_constraintTop_toBottomOf="@id/button_C"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/gl_1"
        android:backgroundTint="@color/dark_grey"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_4"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="25dp"
        android:text="4"
        android:textSize="30sp"
        app:cornerRadius="36dp"
        app:layout_constraintTop_toBottomOf="@id/button_7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/gl_1"
        android:backgroundTint="@color/dark_grey"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_1"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="25dp"
        android:text="1"
        android:textSize="30sp"
        app:cornerRadius="36dp"
        app:layout_constraintTop_toBottomOf="@id/button_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/gl_1"
        android:backgroundTint="@color/dark_grey"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_0"
        android:layout_width="154dp"
        android:layout_height="72dp"
        android:layout_marginTop="20dp"
        android:text="0"
        android:textSize="30sp"
        app:cornerRadius="36dp"
        app:layout_constraintTop_toBottomOf="@id/button_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/gl_2"
        android:backgroundTint="@color/dark_grey"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_pangkat"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="20dp"
        android:text="^"
        android:textSize="30sp"
        app:cornerRadius="36dp"
        app:layout_constraintStart_toStartOf="@id/gl_1"
        app:layout_constraintEnd_toEndOf="@id/gl_2"
        app:layout_constraintTop_toBottomOf="@id/gl_4"
        android:backgroundTint="@color/light_grey"
        android:textColor="@color/black"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_8"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="25dp"
        android:text="8"
        android:textSize="30sp"
        app:cornerRadius="36dp"
        app:layout_constraintTop_toBottomOf="@id/button_pangkat"
        app:layout_constraintStart_toStartOf="@id/gl_1"
        app:layout_constraintEnd_toStartOf="@id/gl_2"
        android:backgroundTint="@color/dark_grey"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_5"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="25dp"
        android:text="5"
        android:textSize="30sp"
        app:cornerRadius="36dp"
        app:layout_constraintTop_toBottomOf="@id/button_8"
        app:layout_constraintStart_toStartOf="@id/gl_1"
        app:layout_constraintEnd_toStartOf="@id/gl_2"
        android:backgroundTint="@color/dark_grey"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_2"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="25dp"
        android:text="2"
        android:textSize="30sp"
        app:cornerRadius="36dp"
        app:layout_constraintTop_toBottomOf="@id/button_5"
        app:layout_constraintStart_toStartOf="@id/gl_1"
        app:layout_constraintEnd_toStartOf="@id/gl_2"
        android:backgroundTint="@color/dark_grey"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_persen"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="20dp"
        android:text="%"
        android:textSize="30sp"
        app:cornerRadius="36dp"
        app:layout_constraintStart_toStartOf="@id/gl_2"
        app:layout_constraintEnd_toEndOf="@id/gl_3"
        app:layout_constraintTop_toBottomOf="@id/gl_4"
        android:backgroundTint="@color/light_grey"
        android:textColor="@color/black"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_9"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="25dp"
        android:text="9"
        android:textSize="30sp"
        app:cornerRadius="36dp"
        app:layout_constraintTop_toBottomOf="@id/button_persen"
        app:layout_constraintStart_toStartOf="@id/gl_2"
        app:layout_constraintEnd_toStartOf="@id/gl_3"
        android:backgroundTint="@color/dark_grey"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_6"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="25dp"
        android:text="6"
        android:textSize="30sp"
        app:cornerRadius="36dp"
        app:layout_constraintTop_toBottomOf="@id/button_9"
        app:layout_constraintStart_toStartOf="@id/gl_2"
        app:layout_constraintEnd_toStartOf="@id/gl_3"
        android:backgroundTint="@color/dark_grey"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_3"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="25dp"
        android:text="3"
        android:textSize="30sp"
        app:cornerRadius="36dp"
        app:layout_constraintTop_toBottomOf="@id/button_6"
        app:layout_constraintStart_toStartOf="@id/gl_2"
        app:layout_constraintEnd_toStartOf="@id/gl_3"
        android:backgroundTint="@color/dark_grey"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_koma"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="25dp"
        android:text=","
        android:textSize="30sp"
        app:cornerRadius="36dp"
        app:layout_constraintTop_toBottomOf="@id/button_3"
        app:layout_constraintStart_toStartOf="@id/gl_2"
        app:layout_constraintEnd_toStartOf="@id/gl_3"
        android:backgroundTint="@color/dark_grey"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_bagi"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="20dp"
        android:text="/"
        android:textSize="30sp"
        app:cornerRadius="36dp"
        app:layout_constraintStart_toStartOf="@id/gl_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gl_4"
        android:backgroundTint="@color/orange"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_kali"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="25dp"
        android:text="x"
        android:textSize="30sp"
        app:cornerRadius="36dp"
        app:layout_constraintStart_toStartOf="@id/gl_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_bagi"
        android:backgroundTint="@color/orange"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_kurang"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="25dp"
        android:text="-"
        android:textSize="30sp"
        app:cornerRadius="36dp"
        app:layout_constraintStart_toStartOf="@id/gl_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_kali"
        android:backgroundTint="@color/orange"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_tambah"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="25dp"
        android:text="+"
        android:textSize="30sp"
        app:cornerRadius="36dp"
        app:layout_constraintStart_toStartOf="@id/gl_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_kurang"
        android:backgroundTint="@color/orange"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_sama"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="25dp"
        android:text="="
        android:textSize="30sp"
        app:cornerRadius="36dp"
        app:layout_constraintStart_toStartOf="@id/gl_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_tambah"
        android:backgroundTint="@color/orange"/>

</androidx.constraintlayout.widget.ConstraintLayout>